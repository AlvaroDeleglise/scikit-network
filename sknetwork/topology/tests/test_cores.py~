#!/usr/bin/env python3
# -*- coding: utf-8 -*-
"""Tests for k-core decimposition"""

import unittest

from sknetwork.cores import CoreDecomposition
from sknetwork.data.test_graphs import *
from sknetwork.data import karate_club
from test_graphs import *


class TestCoreDecomposition(unittest.TestCase):
    
    def test_disconnected(self):
        adjacency = test_graph_disconnect()
        core_val = CoreDecomposition().fit_transform(adjacency)
        self.assertEqual(core_val, 1)
        
    def test_cliques(self):
        adjacency = test_clique()
        n = adjacency.shape[0]
        core_val = CoreDecomposition().fit_transform(adjacency)
        self.assertEqual(core_val, n)
        
        
    def test_cores(self):
		adjacency = karate_club()
		
        core = CoreDecomposition()
        core_val = core.fit_transform(adjacency)
        self.assertEqual(core_val, ?)